{
    "app-id": "org.mozilla.Thunderbird",
    "runtime": "org.freedesktop.Platform",
    "runtime-version": "19.08beta",
    "sdk": "org.freedesktop.Sdk",
    "sdk-extensions": [
        "org.freedesktop.Sdk.Extension.rust-stable",
        "org.freedesktop.Sdk.Extension.node10"
    ],
    "command": "thunderbird",
    "rename-icon": "thunderbird",
    "finish-args": [
        /* X11 + XShm access */
        "--share=ipc", "--socket=x11",
        /* OpenGL access */
        "--device=dri",
        /* Needs to talk to the network: */
        "--share=network",
        /* Play sounds */
        "--socket=pulseaudio",
        /* Make thunderbird configuration persistent */
        "--persist=.thunderbird",
        /* Access to Public directory (read-only, to upload attachments) */
        "--filesystem=xdg-public-share:ro",
        /* Access to Downloads (to download attachments) */
        "--filesystem=xdg-download:rw",
        /* Needed for dconf to work */
        "--filesystem=xdg-run/dconf", "--filesystem=~/.config/dconf:ro",
        "--talk-name=ca.desrt.dconf", "--env=DCONF_USER_CONFIG_DIR=.config/dconf",
        /* Needed for accessibility */
        "--talk-name=org.a11y.*",
        /* Make notifications work */
        "--talk-name=org.freedesktop.Notifications"
    ],
    "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "/share/pkgconfig",
        "/share/aclocal",
        "/man",
        "/share/man",
        "*.la", "*.a"
    ],
    "modules": [
        "shared-modules/gtk2/gtk2.json",
        {
            "name": "autoconf-2.13",
            "config-opts": ["--program-suffix=2.13"],
            "cleanup": [ "*" ],
            "sources": [
                {
                    "type": "archive",
                    "url": "http://ftp.gnu.org/gnu/autoconf/autoconf-2.13.tar.gz",
                    "sha256": "f0611136bee505811e9ca11ca7ac188ef5323a8e2ef19cffd3edb3cf08fd791e"
                }
            ]
        },
        {
            "name": "yasm",
            "cleanup": [ "*" ],
            "sources": [
                {
                    "type": "archive",
                    "url": "http://www.tortall.net/projects/yasm/releases/yasm-1.3.0.tar.gz",
                    "sha256": "3dce6601b495f5b3d45b59f7d2492a340ee7e84b5beca17e48f862502bd5603f"
                }
            ]
        },
        {
            "name": "thunderbird",
            "buildsystem": "simple",
            "cleanup": [
                "/app/bin/cbindgen",
                "/app/bin/node"
            ],
            "build-options":{
                "append-path": "/usr/lib/sdk/rust-stable/bin:/usr/lib/sdk/node10/bin",
                "env":{
                    "VERSION": "68.0",
                    "TERM": "linux",
                    "CARGO_HOME": "/run/build/Thunderbird/cargo",
                    "npm_config_nodedir": "/usr/lib/sdk/node10"
                }
            },
            "build-commands": [
                "install -Dm755 cbindgen /app/bin/",
                "install -Dm755 node-stdout-nonblocking-wrapper /app/bin/node",
                "./mach build -j4",
                "./mach install",
                "for i in 16 22 24 32 48 64 128 256;do mkdir -p /app/share/icons/hicolor/${i}x${i}/apps;cp comm/mail/branding/thunderbird/default${i}.png /app/share/icons/hicolor/${i}x${i}/apps/thunderbird.png;done",
                "mkdir -p /app/share/icons/hicolor/symbolic/apps",
                "cp comm/mail/branding/thunderbird/TB-symbolic.svg /app/share/icons/hicolor/symbolic/apps/thunderbird-symbolic.svg",
                "mkdir -p /app/share/applications",
                "cp org.mozilla.Thunderbird.desktop /app/share/applications",
                "mkdir -p /app/share/metainfo",
                "cp org.mozilla.Thunderbird.appdata.xml /app/share/metainfo"
            ],
            "sources": [
                {
                    "type": "file",
                    "path": "mozconfig"
                },
                {
                    "type": "file",
                    "path": "org.mozilla.Thunderbird.desktop"
                },
                {
                    "type": "file",
                    "path": "org.mozilla.Thunderbird.appdata.xml"
                },
                {
                    "type": "archive",
                    "url": "https://ftp.mozilla.org/pub/thunderbird/releases/68.0/source/thunderbird-68.0.source.tar.xz",
                    "sha256": "f87dade2dd64ef61de842812d3e42d82b8a541988da851077778abfa2ebd95d1"
                },
                {
                    "type" : "patch",
                    "path" : "rust-1.33-build.patch"
                },
                {
                    "type": "file",
                    "url": "https://github.com/eqrion/cbindgen/releases/download/v0.9.1/cbindgen",
                    "sha256": "ceecdfa7ed787b68e3797912c02895caee4175368749be9519375015ac9236cb"
                },
                {
                    "type": "file",
                    "path": "node-stdout-nonblocking-wrapper"
                }
            ]
        }
    ]
}
